# Git global configuration for Web3 development container
# This file is managed by config-manager
#
# Users should customize user.name and user.email after first setup

[user]
	name = Your Name
	email = your.email@example.com

[init]
	defaultBranch = main

[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore_global

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	colorMoved = default

[merge]
	conflictstyle = diff3

[rerere]
	enabled = true

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = log --oneline --graph --decorate --all
	amend = commit --amend --no-edit

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red
